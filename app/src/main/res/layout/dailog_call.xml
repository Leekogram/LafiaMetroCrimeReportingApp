<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">


    <ImageButton
        android:id="@+id/btnCallCops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        app:srcCompat="@drawable/police" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCallCops"
        android:layout_below="@+id/btnCallCops"
        android:layout_marginTop="17dp"
        android:fontFamily="serif"
        android:text="Call Cops"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />


    <ImageButton
        android:id="@+id/btnAmbulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnCallCops"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/er2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnAmbulance"
        android:layout_below="@+id/btnAmbulance"
        android:layout_marginTop="17dp"
        android:text="Call Ambulance"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnCallFireStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/fire" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCallFireStation"
        android:layout_below="@+id/btnCallFireStation"
        android:layout_marginTop="24dp"
        android:text="Call Fire Station"
        android:textColor="@android:color/background_light" />

</RelativeLayout>